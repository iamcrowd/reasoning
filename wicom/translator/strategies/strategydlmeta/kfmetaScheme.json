{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gilia.metamodel.metamodel",
  "title": "Metamodel JSON",
  "description": "This JSON represents the abstraction of a model into the Metamodel according to the Metamodel formalization [Fillottrani-Keet]",
  "type": "object",
  "properties": {
    "Entity type": {
      "description": "",
      "type": "object",
      "properties": {
        "Object type": {
          "description": "",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "Data type": {
          "description": "",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "Value property": {
          "description": "",
          "type": "object",
          "properties": {
            "Value type": {
              "description": "",
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "Role": {
      "description": "",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "rolename": {
            "type": "string"
          },
          "relationship": {
            "type": "string"
          },
          "entity type": {
            "type": "string"
          },
          "object type cardinality": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "Relationship": {
      "description": "",
      "type": "object",
      "properties": {
        "Subsumption": {
          "description": "",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "entity parent": {
                "type": "string"
              },
              "entity child": {
                "type": "string"
              },
              "disjointness constraints": {
                "type": "string"
              },
              "completeness constraints": {
                "type": "string"
              }
            }
          }
        },
        "Relationship": {
          "description": "",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "entities": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "Attributive property": {
          "description": "",
          "type": "object",
          "properties": {
            "Attributive property": {
              "description": "",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "domain": {
                    "type": "array",
                    "items": {"type": "string"}
                  },
                  "range": {
                    "type": "string"
                  }
                }
              }
            },
            "Attribute": {
              "description": "",
              "type": "object",
              "properties": {
                "Attribute": {

                },
                "Mapped to": {

                }
              }
            }
          }
        }
      }
    },
    "Constraints": {
      "description": "",
      "type": "object",
      "properties": {
        "Disjointness constraints": {
          "description": "",
          "type": "object",
          "properties": {
            "Disjoint object type": {
              "description": "",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "entities": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            },
            "Disjoint role": {
              "description": "",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "entities": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "Completeness constraints": {
          "description": "",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "entities": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "Cardinality constraints": {
          "description": "",
          "type": "object",
          "properties": {
            "Object type cardinality": {
              "description": "",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "minimum": {
                    "type": "string"
                  },
                  "maximum": {
                    "type": "string"
                  }
                }
              }
            },
            "Attibutive property cardinality": {
              "description": "",
              "type": "array",
              "items": true
            }
          }
        },
        "Mandatory constraints": {
          "description": "",
          "type": "object",
          "properties": {
            "Mandatory": {
              "description": "",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "declared on": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "Entity type",
    "Role",
    "Relationship",
    "Constraints"
  ]
}